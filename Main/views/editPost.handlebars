<div class='post card'>
	<div class='card-header'>
		<h2>Change a post up here</h2>
	</div>
	<form id='edit-post-form' class='card-body'>
		<input type='hidden' name='post-id' value='{{post.id}}' />

		<label class='form-label' for='post-title'>Main title of post</label>
		<input
			type='text'
			name='post-title'
			value='{{post.title}}'
			class='form-input'
		/>

		<label class='form-label' for='post-body'>Body:</label>
		<textarea name='post-body' class='form-input'>{{post.body}}</textarea>

		<button type='submit' class='btn'>Change your post</button>

		<button type='button' id='delete-btn' class='btn'>Get rid of it</button>
	</form>
</div>

<script src='/js/edit.js'></script>