<div class='card'>
	<div class='card-header'><h2>Login here</h2></div>
	<form id='login-form' class='card-body'>
		<div class='form-group'>
			<label for='username-login'>User</label>
			<input class='form-input' type='text' id='username-login' />
		</div>
		<div class='form-group'>
			<label for='password-login'>Passcode</label>
			<input class='form-input' type='password' id='password-login' />
		</div>
		<div class='form-group'>
			<button
				id='login-button'
				class='btn btn-primary'
				type='submit'
			>Login here</button>
		</div>
		<a href='/signup' type='button'>Sign up here</a>
	</form>

</div>

<script src='/js/login.js'></script>
