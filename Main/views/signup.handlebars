<div class='card'>
	<div class='card-header'>
		<h2>Sign Up for the Techno Blog!</h2>
	</div>
	<div id='signup' role='tabpanel'>
		<form id='signup-form' class='card-body'>
			<div>
				<label for='username-signup'>Username here</label>
				<input type='text' id='username-signup' />
			</div>
			<div>
				<label for='password-signup'>Password here</label>
				<input type='password' id='password-signup' />
			</div>
			<button type='submit' id='signup-btn' class='btn'>Signup!</button>
			<a href='/login'>Login</a>
		</form>
	</div>
</div>

<script src='/js/signup.js'></script>